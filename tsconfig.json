{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "composite": true,
        // "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "jsx": "react",
        "module": "CommonJS",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "outDir": "pyodide",
        "baseUrl": ".",
        "rootDir": "./src",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2019",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*", "vscode.*"],
    "exclude": ["./node_modules", "./out", "./pyodide", "./dist", "./build"]
}
