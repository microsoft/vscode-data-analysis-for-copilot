{
    "name": "@vscode/pyodide",
    "publisher": "microsoft",
    "description": "Pyodide wrapper for use within VS Code",
    "author": "Microsoft Corporation",
    "homepage": "https://github.com/microsoft/Advanced-Data-Analysis-for-Copilot",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/Advanced-Data-Analysis-for-Copilot"
    },
    "bugs": {
        "url": "https://github.com/microsoft/Advanced-Data-Analysis-for-Copilot/issues"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "AI",
        "Chat"
    ],
    "activationEvents": [],
    "enabledApiProposals": [
        "chatVariableResolver",
        "lmTools",
        "chatProvider"
    ],
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "postinstall": "npm run build:types",
        "build": "npm run build:types && npm run compile:worker -- --minify && npm run compile:kernel -- --minify",
        "prebuild": "npx tsx build/clean.ts",
        "postbuild": "npx tsx build/deleteUnwantedTypes.ts && npx tsx build/archive.ts",
        "compile": "npm run build:types && npm run compile:worker && npm run compile:kernel",
        "debug": "node build/debug.js",
        "build:types": "tsc -p src --emitDeclarationOnly",
        "compile:kernel": "esbuild --bundle --sourcemap --target=node18 --platform=node --format=cjs --outfile=pyodide/node/index.js src/node/index.ts",
        "compile:worker": "esbuild --bundle --sourcemap --target=node18 --platform=node --format=cjs --outfile=pyodide/node/comlink.worker.js src/node/comlink.worker.ts",
        "lint": "eslint src build",
        "lint-fix": "eslint --fix src build",
        "format": "prettier --write *.js *.json 'src/**/*.ts*' 'build/**/*.yml' 'build/**/*.ts'",
        "format-check": "prettier --check *.js *.json 'src/**/*.ts*' 'build/**/*.yml' 'build/**/*.ts'"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/follow-redirects": "^1.14.4",
        "@types/json-schema": "^7.0.15",
        "@types/localforage": "^0.0.34",
        "@types/node": "^20.5.9",
        "@types/node-fetch": "^2.5.7",
        "@types/proxy-from-env": "^1.0.4",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "archiver": "^7.0.1",
        "esbuild": "^0.21.5",
        "eslint": "^9.12.0",
        "follow-redirects": "^1.15.9",
        "globals": "^15.10.0",
        "https-proxy-agent": "^7.0.5",
        "prettier": "^3.3.3",
        "proxy-from-env": "^1.1.0",
        "pyodide": "^0.26.2",
        "tar": "^7.4.3",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1"
    },
    "dependencies": {
        "@jupyterlab/coreutils": "^6.2.5",
        "@jupyterlab/services": "^7.2.5",
        "@jupyterlite/contents": "^0.4.2",
        "@jupyterlite/kernel": "^0.4.2",
        "@lumino/coreutils": "^2.1.2",
        "comlink": "^4.4.1"
    }
}
